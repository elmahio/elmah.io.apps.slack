{
	"variables": [],
	"rule": {
		"title": "Post a message to Slack on all new errors",
		"query": "isNew:true AND (severity:Error OR severity:Fatal)",
		"then": {
			"type": "http",
			"url": "$webhookUrl",
			"method": "post",
			"contentType": "application/json",
			"body": "{\"text\": \"$message\"}"
		}
	}
}